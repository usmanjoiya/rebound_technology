<odoo>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="rebound_view_id">
      <field name="name">rebound_view</field>
      <field name="model">rebound_tech.news</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Title"/>
          <field name="news_type"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="rebound_form_view_id">
      <field name="name">rebound_view_form</field>
      <field name="model">rebound_tech.news</field>
      <field name="arch" type="xml">
        <form>
            <group>
                <field name="name" string="Title"/>
                <field name="news_type"/>
                <field name="description"/>
            </group>

        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="rebound_act_id">
      <field name="name">rebound_tech</field>
      <field name="res_model">rebound_tech.news</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Rebound News" id="rebound_news_id" sequence="90" web_icon="rebound_tech,static/src/images/Shape2.png"/>
    <menuitem name="News" id="rebound_news_sub_id" parent="rebound_news_id" sequence="10" action="rebound_tech.rebound_act_id"/>

</odoo>
